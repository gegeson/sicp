          (d (/ d g)))
      (cond
        ((and (negative? n) (negative? d))
         (cons (- n) (- d)))
        ((and (negative? n) (positive? d))
         (cons n d)
         )
         ((and (positive? n) (negative? d))
          (cons (- n) (- d))
          )
        (else
         (cons n d)
         )
        ))
    )
  )

